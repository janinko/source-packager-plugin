<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
  <f:section title="${descriptor.displayName}">
    <f:advanced>
      <f:entry title="Ignore files (full path)" field="ignore">
        <f:textarea default=".git"/>
      </f:entry>
      <f:entry title="Ignore files (check this in every directory)" field="ignoreall">
        <f:textarea default=".svn"/>
      </f:entry>
      <f:entry title="Files with additional ignorelists" field="ignorelists">
        <f:textarea default=".gitignore"/>
      </f:entry>
    </f:advanced>
  </f:section>
</j:jelly>